LoginForm {
    height: 100%;
    align: center middle;

    Input {
        margin: 1;
        width: 40;
    }

    Button {
        margin-left: 14;
    }

    Label {
        margin-left: 12;
        margin-top: 1;
        color: red;
    }
}

#dashboard {
    align: left middle;
    dock: left;
    width: auto;
    height: auto;
}

Dashboard {
    content-align: center middle;

    Button {
        margin: 1
    }
}

UserList {
    height: 100%;
    keyline: thin;
    
    Grid {
        grid-size: 1;
        grid-gutter: 1;
    }

    DataTable {
        column-span: 2;
        height: 100%;
    }

    Button {
        column-span: 3;
        align: right top
    }
}

UserForm {
    height: 100%;
    align: center middle;
    border: solid red;
    layout: vertical;

    Input {
        margin: 1;
        width: 50;
        border: solid red;
    }

    Container {
        align: center middle;
        layout: horizontal;
        
        Button {
            margin: 1;
        }
    }
}

.content {
    content-align: center middle;
    width: auto;
}
